# Application
PROJECT_NAME=FastAPI User Management API
VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_db
DB_ECHO=False

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-use-secrets.token_urlsafe
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# First Superuser (for initial setup)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis123
FIRST_SUPERUSER_FULLNAME=Admin User
